- if exhibits.any?
  %table
    %thead
      %tr
        %th タイトル
        %th 出品者
        %th 説明
        %th 画像
    %tbody
      - exhibits.each do |exhibit|
        %tr
          %td
            = link_to exhibit.title, edit_my_exhibit_path(exhibit)
          %td
            = exhibit.user.nickname
          %td
            = exhibit.description
          %td
            = exhibit_image_tag(exhibit.image_url)
- else
  %p まだ何もありません
